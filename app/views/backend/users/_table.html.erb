<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t ".list_user" %></h1>
  </div>
</div>
<div class="panel-heading">
  <div class="col-md-offset-7">
    <%= search_form_for [:backend, @q] do |f| %>
      <%= f.label :name_or_email %>
      <%= f.search_field :name_or_email_cont %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= t ".list_user" %>
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th class="center"><%= t ".name" %></th>
                <th class="center"><%= t ".email" %></th>
                <th class="center"><%= t ".address" %></th>
                <th class="center"><%= t ".phone" %></th>
                <th class="center"><%= t ".role" %></th>
                <th class="center" colspan="2"><%= t ".function" %></th>
              </tr>
            </thead>
            <tbody>
              <%= render @users %>
            </tbody>
            <%= will_paginate %>
          </table>
            <%= link_to t(".create_user"), new_backend_user_path, class: "btn btn-success", role: :button %>
        </div>
      </div>
    </div>
  </div>
</div>
