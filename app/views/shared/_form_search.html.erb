<div class="">
  <div class="row">
    <div class="col-xs-12 col-xs-offset-0">
      <%= search_form_for @q do |f| %>
        <div class="input-group search-form">
          <div class="form-group">
            <%= f.search_field :name_cont, class: "form-control  search-name-width", placeholder: t("search.name") %>
          </div>
          <div class="form-group">
            <%= f.search_field :price_gteq, placeholder: t("search.min"), class: "form-control search-min-width" %>
          </div>
          <div class="form-group">
            <%= f.search_field :price_lteq, placeholder: t("search.max"), class: "form-control search-max-width" %>
          </div>
          <div class="form-group">
            <%= f.select :category_id_eq, options_for_select(category_select), {include_blank: t("search.all")}, class: "select form-control search-category-width" %>
          </div>

          <span class="input-group-btn">
            <button class="btn btn-primary search-button" type="submit"><span class="glyphicon glyphicon-search"></span></button>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>

